#############################
######### xkeyboard #########
#############################
[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " KEY "
format-prefix-font = 0
format-prefix-foreground = ${colors.blue}
format-prefix-background = ${colors.background}

label-layout = %layout%
label-layout-font = main
label-layout-foreground = ${colors.blue}
label-layout-background = ${colors.background}

; label-indicator-padding = 2
; label-indicator-margin = 1
; label-indicator-background = ${colors.blue}
; label-indicator-underline = ${colors.blue}

#############################
######### filesystem ########
#############################
[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

#############################
########## i3index ##########
#############################
[module/i3index]
type = internal/i3
format = <label-state>

strip-wsnumbers = true

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = "%index% "
label-focused-foreground = ${colors.bar_fg}
label-focused-background = ${colors.bar_bg}

pin-workspaces = true

label-unfocused =
label-urgent =

#############################
############# i3 ############
#############################
[module/i3]
type = internal/i3

strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = true

# Only show workspaces on the same output as the bar
pin-workspaces = true

# ws-icon-[0-9]+ = <label>;<icon>
# NOTE: The <label> needs to match the name of the i3 workspace
# Neither <label> nor <icon> can contain a semicolon (;)
#ws-icon-0 = "0:hdmi;Ôâ©"
#ws-icon-1 = "1:main;ÔµÄ"
#ws-icon-2 = "2:seconday;Ô©ï"
#ws-icon-3 = "3:tertiary;Ô≥¥"
#ws-icon-4 = "4:comm;Óàï"
#ws-icon-5 = "5:mail;Ôõ∞"
#ws-icon-6 = "6:games;ÔÑõ"
#ws-icon-7 = "7:media;ÔÜº"
#ws-icon-8 = "8:other;ÔÇ≠"
#ws-icon-9 = "9:moar;ÓòÆ"
#ws-icon-10 = "10:dp;ÔÅö"
#ws-icon-default = Ôüò

# Available tags:
#   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
#   <label-mode> (default)
format = <label-state> <label-mode>

label-mode = "%mode%"
label-mode-foreground = ${colors.pink}
label-mode-background = ${colors.background}

# focused = Active workspace on focused monitor
label-focused = " Ôüó"
#label-focused = " %icon% "
label-focused-foreground = ${colors.purple}
label-focused-background = ${colors.background}

# unfocused = Inactive workspace on any monitor
label-unfocused = " Ôüò"
#label-unfocused = " %icon% "
label-unfocused-foreground = ${colors.pink}
label-unfocused-background = ${colors.background}

# Available tokens:
#   %name%
#   %icon%
#   %index%
#   %output%
# Default: %icon%  %name%
label-visible =
label-visible-underline =
label-visible-padding = 0
label-visible-foreground = ${colors.pink}

# urgent = Workspace with urgency hint set
label-urgent = " Ôüó "
#label-urgent = " %icon% "
label-urgent-foreground = ${colors.red}
label-urgent-background = ${colors.background}

#############################
############ cpu ############
#############################
[module/cpu]
type = internal/cpu
interval = 1

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>

format = <label>
format-prefix ="Ôë£ "
format-prefix-foreground = ${colors.fg_alt}

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label-prefix = test
label = %percentage%%

